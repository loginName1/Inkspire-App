<Page x:Class="Bookies_App.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookies_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Style="{StaticResource pageBackgroundStyle}">
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <TextBlock Text="Login page" Style="{StaticResource pageH3Style}" />



            <Label Content="Username:"/>
            <TextBox Name="txtBox_username" Style="{StaticResource TextBoxStyle}"/>
            <Label Content="Password:"/>
            <PasswordBox Name="txtBox_password" Style="{StaticResource PasswordBoxStyle}"/>
            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                <Button Style="{StaticResource LoginButtonStyle_1}" Click="Button_Click">LOGIN</Button>
                <Button Style="{StaticResource LoginButtonStyle_2}">SIGN UP</Button>
            </WrapPanel>
            <Label Name="label_error" Content=""/>
        </StackPanel>
    </Grid>
</Page>

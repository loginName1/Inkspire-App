<Page x:Class="Bookies_App.BookInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookies_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookInfoPage">

    <Grid Style="{StaticResource pageBackgroundStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Style="{StaticResource imageStyle2}" Source="uporabnik.png"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource pageH1Style}"> Author </TextBlock>
                    <TextBlock Style="{StaticResource pageH2Style}"> author </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Style="{StaticResource pageH1Style}"> Genre </TextBlock>
                    <TextBlock Style="{StaticResource pageH2Style}"> genre </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Style="{StaticResource pageH1Style}"> Status </TextBlock>
                    <TextBlock Style="{StaticResource pageH2Style}"> status</TextBlock>
                </StackPanel>

            </Grid>

            <Grid Grid.Row="1">
                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource pageH1Style}">Description</TextBlock>
                    <TextBlock Style="{StaticResource pageH4Style}">The Description</TextBlock>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource pageH1Style}">Content</TextBlock>
                    <ScrollViewer Height="120px" ScrollViewer.VerticalScrollBarVisibility="Auto">

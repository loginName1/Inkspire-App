<Page x:Class="Bookies_App.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookies_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Style="{StaticResource pageBackgroundStyle}">
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <TextBlock Text="register page" Style="{StaticResource pageH3Style}" />
            <TextBox Style="{StaticResource TextBoxStyle}">Name</TextBox>
            <TextBox Style="{StaticResource TextBoxStyle}">Username</TextBox>
            <TextBox Style="{StaticResource TextBoxStyle}">Email</TextBox>
            <TextBox Style="{StaticResource TextBoxStyle}">Password</TextBox>
            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                <Button Style="{StaticResource LoginButtonStyle_1}">REGISTER</Button>
                <Button Style="{StaticResource LoginButtonStyle_2}">LOGIN</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>

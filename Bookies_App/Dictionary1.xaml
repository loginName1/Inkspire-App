<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <!-- COLOR -->
    <SolidColorBrush x:Key="LightGray" Color="#515057"/>
    <SolidColorBrush x:Key="LightGray2" Color="#9d9ba3"/>
    <SolidColorBrush x:Key="DarkGray" Color="#212529"/>
    <SolidColorBrush x:Key="Dark" Color="#18191a"/>
    <SolidColorBrush x:Key="Bisque" Color="#ffe4c4"/>
    <SolidColorBrush x:Key="Light" Color="White"/>
    <SolidColorBrush x:Key="Light2" Color="#d4d1de"/>

    <LinearGradientBrush x:Key="HeaderColor" EndPoint="0.5, 0.75" StartPoint="0.5, 0.05">
        <GradientStop Color="#3f464d"/>
        <GradientStop Color="#212529" Offset="1"/>
    </LinearGradientBrush>


    <!-- HEADER -->
    <Style TargetType="{x:Type TextBlock}" x:Key="menuHeaderStyle">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource Bisque}"/>
    </Style>
    
    <Style TargetType="{x:Type Button}" x:Key="menuHeaderButtonStyle">
        <Setter Property="Foreground" Value="{StaticResource Bisque}"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource Dark}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="HeaderBackgroundStyle">
        <Setter Property="Background" Value="{StaticResource HeaderColor}"/>
    </Style>

    <!-- PAGE -->
    <Style TargetType="{x:Type Grid}" x:Key="pageBackgroundStyle">
        <Setter Property="Background" Value="{StaticResource LightGray}"/>
    </Style>

    <!-- FOOTER -->
    <Style TargetType="{x:Type Grid}" x:Key="pageFooterStyle">
        <Setter Property="Background" Value="{StaticResource DarkGray}"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="pageFooterFontStyle">
        <Setter Property="Foreground" Value="{StaticResource Bisque}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Calibri" />
    </Style>

    <!-- TEXT BLOCK -->

    <Style TargetType="{x:Type TextBlock}" x:Key="pageH1Style">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="4 0 0 0"/>
        <Setter Property="Foreground" Value="{StaticResource Dark}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Padding" Value="0 20 0 0"/>
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style TargetType="{x:Type TextBlock}" x:Key="pageH3Style">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource Dark}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Padding" Value="0 20 0 0"/>
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="pageH5Style">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource Dark}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="pageH6Style">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource Dark}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>

    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="pageH2Style">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="10 1 0 1"/>
        <Setter Property="Foreground" Value="{StaticResource Dark}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>

    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="pageH4Style">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="16 1 8 1"/>
        <Setter Property="Foreground" Value="{StaticResource Dark}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Height" Value="110"/>

        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible"/>
    </Style>

    <!-- TEXT BOX -->
    <Style TargetType="{x:Type TextBox}" x:Key="TextBoxStyle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontFamily" Value="Calibri" />
    </Style>

    <Style TargetType="{x:Type TextBox}" x:Key="TextBoxStyle2">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Margin" Value="15 3 15 3"/>
        <Setter Property="FontFamily" Value="Calibri" />

        <Setter Property="Foreground" Value="{StaticResource LightGray}"/>
        <Setter Property="Background" Value="{StaticResource Light2}"/>

    </Style>


    <!-- IMAGE -->
    <Style TargetType="{x:Type Image}" x:Key="imageStyle">
        <Setter Property="Width" Value="125"/>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="imageStyle2">
        <Setter Property="Width" Value="130"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="5 30 0 0"/>
    </Style>

    <!-- CARD -->
    <Style TargetType="{x:Type Border}" x:Key="BorderCardStyle">
        <Setter Property="Background" Value="{StaticResource Light}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="25 30 25 0"/>
        <Setter Property="Width" Value="140"/>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="BorderCardStyle2">
        <Setter Property="Background" Value="{StaticResource Light}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="25 5 25 5"/>
        <Setter Property="Width" Value="680"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>


    <!-- PANEL -->
    <Style TargetType="{x:Type WrapPanel}" x:Key="WrapPanelStyle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="{x:Type StackPanel}" x:Key="StackPanelStyle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="20 0 20 0"/>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="LoginButtonStyle_1">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="8 4 8 4"/>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="LoginButtonStyle_2">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="8 4 8 4"/>
        <Setter Property="Background" Value="{x:Null}"/>
    </Style>
    
    <!-- BUTTON -->
    <Style TargetType="{x:Type Button}" x:Key="ButtonStyle">
        <Setter Property="Margin" Value="2 2 40 2"/>
        <Setter Property="Padding" Value="6 3 6 3"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Background" Value="{StaticResource LightGray2}"/>
        <Setter Property="Foreground" Value="{StaticResource Bisque}"/>
    </Style>

</ResourceDictionary>

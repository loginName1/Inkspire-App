<Window x:Class="Bookies_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookies_App"
        mc:Ignorable="d"
        Title="Bookies App" Height="650" Width="900"
        MinHeight="650" MinWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1.1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"  Grid.RowSpan="3" Style="{StaticResource HeaderBackgroundStyle}"></Border>

            <TextBlock Grid.Row="0" Text="BOOKIES" Style="{StaticResource ResourceKey=menuHeaderStyle}"/>
            <Line Grid.Row="1"
                X1="0" Y1="0"
                X2="300" Y2="0"
                Stroke="Bisque"
                StrokeThickness="0.5" 
                HorizontalAlignment="Center"  
                  />

        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Visibility="Visible" Name="header_logged_out">
            <Button x:Name="Home" Style="{StaticResource menuHeaderButtonStyle}"  Click="HomeRedirectClick">Home</Button>
            <Button x:Name="Books" Style="{StaticResource menuHeaderButtonStyle}" Click="BooksRedirectClick">Books</Button>
            <Button x:Name="About" Style="{StaticResource menuHeaderButtonStyle}" Click="AboutRedirectClick">About</Button>
            <Button x:Name="Login" Style="{StaticResource menuHeaderButtonStyle}" Click="LoginRedirectClick">Login</Button>
            <Button x:Name="Register" Style="{StaticResource menuHeaderButtonStyle}" Click="RegisterRedirectClick">Sign up</Button>
        </WrapPanel>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Name="header_logged_in" Visibility="Hidden">
            <Button x:Name="Home_logged_in" Style="{StaticResource menuHeaderButtonStyle}"  Click="HomeRedirectClick">Home</Button>
            <Button x:Name="Books_logged_in" Style="{StaticResource menuHeaderButtonStyle}" Click="BooksRedirectClick">Books</Button>
            <Button x:Name="Workshop" Style="{StaticResource menuHeaderButtonStyle}" Click="WorkshopRedirectClick">Workshop</Button>
            <Button x:Name="About_logged_in" Style="{StaticResource menuHeaderButtonStyle}" Click="AboutRedirectClick">About</Button>
            <Button x:Name="Account" Style="{StaticResource menuHeaderButtonStyle}" Click="AccountRedirectClick" Content="Account"/>
            <Button x:Name="Logout" Style="{StaticResource menuHeaderButtonStyle}" Click="LogoutClick">Logout</Button>
        </WrapPanel>

        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Style="{StaticResource pageBackgroundStyle}">

            <Frame x:Name="Main" Margin="0,0,0,0" NavigationUIVisibility="Hidden"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Style="{StaticResource pageFooterStyle}">
            <TextBlock Text="BOOKIES" Style="{StaticResource pageFooterFontStyle}"/>
        </Grid>
    </Grid>
</Window>
